{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\*.cpp",
                "-o",
                "${workspaceFolder}\\${workspaceRootFolderName}.exe",
                "-finput-charset=UTF-8",  // 源文件是UTF-8编码
                "-fexec-charset=GBK"      // 编译后程序输出GBK编码（匹配终端）
            ],
            "options": {
                "cwd": "D:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: D:/mingw64/bin/g++.exe"
        }
    ]
}